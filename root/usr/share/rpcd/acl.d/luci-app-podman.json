{
	"luci-app-podman": {
		"description": "Grant access to Podman RPC methods",
		"read": {
			"cgi-io": [
				"exec"
			],
			"file": {
				"/usr/libexec/podman-api logs * * *": [
					"exec"
				],
				"/usr/libexec/podman-api volume_export *": [
					"exec"
				]
			},
			"ubus": {
				"luci.podman": [
					"containers_list",
					"container_inspect",
					"container_stats",
					"container_top",
					"container_healthcheck_run",
					"images_list",
					"image_inspect",
					"image_manifest_inspect",
					"networks_list",
					"network_inspect",
					"volumes_list",
					"volume_inspect",
					"pods_list",
					"pod_inspect",
					"pod_stats",
					"secrets_list",
					"secret_inspect",
					"system_df",
					"version",
					"info",
					"init_script_status",
					"init_script_show",
					"system_debug"
				]
			},
			"uci": [
				"podman",
				"firewall",
				"network",
				"dhcp"
			]
		},
		"write": {
			"cgi-io": [
				"exec"
			],
			"file": {
				"/usr/libexec/podman-api image_pull *": [
					"exec"
				],
				"/usr/libexec/podman-api volume_import * * *": [
					"exec"
				]
			},
			"ubus": {
				"luci.podman": [
					"container_start",
					"container_stop",
					"container_restart",
					"container_remove",
					"container_create",
					"container_rename",
					"container_update",
					"container_healthcheck_run",
					"image_remove",
					"network_create",
					"network_remove",
					"network_connect",
					"network_disconnect",
					"volume_create",
					"volume_remove",
					"pod_start",
					"pod_stop",
					"pod_restart",
					"pod_pause",
					"pod_unpause",
					"pod_remove",
					"pod_create",
					"secret_create",
					"secret_remove",
					"system_prune",
					"init_script_generate",
					"init_script_set_enabled",
					"init_script_remove",
					"container_recreate"
				]
			},
			"uci": [
				"podman",
				"firewall",
				"network",
				"dhcp"
			]
		}
	}
}
